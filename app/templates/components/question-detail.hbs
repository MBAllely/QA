<div class="row">
  <div class="col-sm-8">
    <h2>{{question.title}}</h2>
    <h5>By {{question.author}}, <em>{{question.date}}</em></h5>
    <p>{{question.body}}</p>
    <p><em>Posted under <strong>{{question.category}}</strong></em></p>
  </div>
  <br>
  <button type="btn btn-danger" {{action 'deleteQuestion' question}}>Delete this question</button>
</div>
