{{#if addNewAnswer}}
  <div>
    <form>
      <div class="form-group">
        <label for="answer_author">Author</label>
        {{input value=answer_author id="answer_author" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="notes">Body</label>
        {{input value=notes id="notes" class="form-control"}}
      </div>

      <button class="btn btn-primary" {{action 'saveAnswer'}}><span class="glyphicon glyphicon-send" aria-hidden="true"></span></button>

    </form>
  </div>
{{else}}
  <button class="btn btn-primary" {{action 'answerFormShow'}}>Answer this Question</button>
{{/if}}
