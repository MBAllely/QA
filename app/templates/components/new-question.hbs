{{#if addNewQuestion}}
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="body">Body</label>
        {{textarea rows="8" cols="40" value=body id="body"}}
      </div>

      <div class="form-group">
        <label for="category">Category</label>
        {{input value=category id="category"}}
      </div>

      <button class="btn-lg btn-primary" {{action 'saveQuestion'}}><span class="glyphicon glyphicon-send" aria-hidden="true"></span></button>

    </form>
  </div>
{{else}}
  <button  class="btn-lg btn-primary" {{action 'questionFormShow'}}>Ask a Question</button>
{{/if}}
