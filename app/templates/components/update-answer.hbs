{{#if updateAnswerForm}}
  <div>
    <form>
      <div class="form-group">
        <label for="answer_author">Author</label>
        {{input value=answer_author placeholder=answer.answer_author}}
      </div>

      <div class="form-group">
        <label for="notes">Notes</label>
        {{input value=notes placeholder=answer.notes}}
      </div>

      <button class="btn-sm btn-success" {{action 'updateAnswer' answer}}><span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span></button>

      <button class="btn-sm btn-danger" {{action 'updateAnswerForm'}}>Cancel</button>

    </form>
  </div>
{{else}}
  <button class="btn-sm btn-warning" {{action 'updateAnswerForm'}}><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
{{/if}}

<button class="btn btn-danger" {{action 'deleteAnswer' answer}}><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
